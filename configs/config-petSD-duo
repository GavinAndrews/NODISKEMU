CONFIG_ARCH=avr
CONFIG_HARDWARE_NAME=petSD-duo
CONFIG_HARDWARE_VARIANT=11
CONFIG_MCU=atmega1284p
CONFIG_LINKER_RELAX=y
CONFIG_MCU_FREQ=18432000
CONFIG_UART_DEBUG=y
CONFIG_UART_BAUDRATE=115200
CONFIG_UART_BUF_SHIFT=8
CONFIG_COMMAND_CHANNEL_DUMP=y
CONFIG_SD_AUTO_RETRIES=10
CONFIG_SD_DATACRC=y
CONFIG_ERROR_BUFFER_SIZE=100
CONFIG_COMMAND_BUFFER_SIZE=120
CONFIG_BUFFER_COUNT=32
CONFIG_MAX_PARTITIONS=2
CONFIG_RTC_DS3231=y
CONFIG_HAVE_IEEE=y
# TODO: Add proper IEC port mappings
# TODO: Can the code cope with IEC lines spread randomly across all ports?
CONFIG_HAVE_IEC=n
CONFIG_REMOTE_DISPLAY=n
CONFIG_GRAPHIC_DISPLAY=y
CONFIG_P00CACHE=y
CONFIG_P00CACHE_SIZE=4000
CONFIG_HAVE_EEPROMFS=y
# 2048 words boot section, Brown-out detection level at Vcc=4.3V
CONFIG_EFUSE=0xFC
CONFIG_HFUSE=0xD2
CONFIG_LFUSE=0xF7
CONFIG_DEBUG_MSGS_TO_LCD=y
# SPSP related defines:
CONFIG_SPSP=y
CONFIG_UART_RX_BUFFER_SIZE=128
CONFIG_MAX_DEVICES=3
CONFIG_MAX_BUFFERS=4
CONFIG_STATUS_MAX=40
